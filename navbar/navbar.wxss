/* components/navbar/navbar.wxss */
@import 'iconfont.wxss';

.nav-wrap {
  width: 100%;
  position: fixed;
  top: 0;
  background-color: #fff;
  color: #000;
  z-index: 9999999;
}

.nav-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.nav-title {
  font-size: 30rpx;
  text-align: center;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.nav-capsule {
  display: flex;
  align-items: center;
  height: 34px;
  border: 0.5px solid rgba(238, 238, 238, 1);
  border-radius: 27px;
  margin-left: 10px;
  padding: 6.4px 0;
  box-sizing: border-box;
}

.capsule-item {
  width: 42px;
  height: 34px;
  line-height: 34px;
  text-align: center;
  margin: 0 auto;
  font-size: 22px;
  font-weight: 600;
}

.capsule-line {
  display: inline-block;
  min-width: 1px;
  height: 17.2px;
  background: rgba(238, 238, 238, 1);
}